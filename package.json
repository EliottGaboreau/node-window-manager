{
  "name": "@rmw/node-window-manager",
  "version": "0.0.0-development",
  "description": "Manage windows in macOS, Windows and Linux",
  "main": "index.cjs",
  "module": "index.js",
  "exports": {
    "import": "./index.js",
    "require": "./index.cjs",
    "default": "./index.cjs"
  },
  "source": "index.ts",
  "types": "dist/index.d.ts",
  "scripts": {
    "build-gyp": "node-gyp rebuild",
    "build-esm": "esbuild src/index.ts --bundle --platform=node --packages=external --target=node18 --format=esm --outfile=index.js",
    "build-cjs": "esbuild src/index.ts --bundle --platform=node --target=node18 --format=cjs --packages=external  --outfile=index.cjs",
    "build-d.ts": "tsc src/index.ts --emitDeclarationOnly -d",
    "build": "npm run build-gyp && npm run build-esm && npm run build-cjs && npm run build-d.ts",
    "test": "node test/test.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johnlindquist/node-window-manager.git"
  },
  "keywords": [
    "window-manager",
    "native",
    "macos",
    "linux",
    "windows"
  ],
  "author": "johnlindquist",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/johnlindquist/node-window-manager/issues"
  },
  "homepage": "https://github.com/johnlindquist/node-window-manager#readme",
  "devDependencies": {
    "@types/node": "20.8.10",
    "node-gyp": "^10.0.0",
    "semantic-release": "^21.0.7",
    "tslint": "6.1.1",
    "typescript": "5.2.2"
  },
  "dependencies": {
    "node-addon-api": "7.0.0",
    "node-gyp-build": "^4.6.1"
  },
  "release": {
    "branches": [
      "+([0-9]).x",
      "main",
      "next",
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm"
    ]
  }
}
